%form{:name => "form", "ng-submit" => "$ctrl.createComment()"}
  .form-group
    %textarea.form-control{"ng-model" => "$ctrl.comment.content", :placeholder => "Add your comment here...", :required => "required"}
    %div{"ng-messages" => "form.content.error", "ng-show" => "form.content.$touched || form.$submitted"}
      .ui.error.message{"ng-message" => "required"} Comment box can't be blank.
    %br/
    %input.btn.btn-flix{:type => "submit", :value => "Add Comment"}

